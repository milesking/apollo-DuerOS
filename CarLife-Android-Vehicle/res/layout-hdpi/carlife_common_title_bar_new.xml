<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="21dp">

        <ImageButton
            android:id="@+id/ib_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/com_bg_btn_selector"
            android:src="@drawable/com_ic_back" />

        <View
            android:id="@+id/view_hide"
            android:layout_width="16dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/ib_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ib_left"
            android:maxWidth="300dp"
            android:singleLine="true"
            android:textColor="@color/cl_text_a4_title"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_title"
            android:paddingTop="2dp"
            android:textColor="@color/cl_text_a0_title"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/ib_right"
            android:layout_width="@dimen/common_icon_small"
            android:layout_height="@dimen/common_icon_small"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@drawable/com_bg_btn_selector"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_bg_btn_selector"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/cl_other_c_highlight"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>