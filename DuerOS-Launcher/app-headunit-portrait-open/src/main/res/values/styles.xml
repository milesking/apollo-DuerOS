<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@color/status_bar</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ProgressCircle">
        <item name="android:indeterminateDrawable">@drawable/progress_drawable</item>
        <item name="android:background">@drawable/loading_bg</item>
        <item name="android:indeterminateDuration">1600</item>
        <item name="android:minWidth">@dimen/default_56</item>
        <item name="android:minHeight">@dimen/default_56</item>
        <item name="android:maxWidth">@dimen/default_56</item>
        <item name="android:maxHeight">@dimen/default_56</item>
    </style>
</resources>
